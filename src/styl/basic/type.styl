html
	// Adaptive
	font-size $font-size-root - 2
	+media(lg)
		font-size $font-size-root




// ===================================================================================================================
// Headings
// ===================================================================================================================

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
	margin-bottom $headings-margin-bottom
	margin-top 2rem
	font-family $headings-font-family
	font-weight $headings-font-weight
	line-height $headings-line-height
	color $headings-color

h1, .h1
	margin-top 0
	font-size $font-size-h1

h2, .h2
	font-size $font-size-h2

h3, .h3
	font-size $font-size-h3

h4, .h4
	margin-top 1.5rem
	margin-bottom 0.5rem
	font-size $font-size-h4

h5, .h5
	font-size $font-size-h5
	font-weight bold
	margin 0

h6, .h6
	font-size $font-size-h6
	font-weight bold
	margin 0

.lead
	font-size $lead-font-size
	font-weight $lead-font-weight
	
p
	margin-top 0
	margin-bottom 1rem
	
	
// Type display classes
.display-1
	font-size $display1-size
	font-weight $display1-weight
	line-height $display-line-height

.display-2
	font-size $display2-size
	font-weight $display2-weight
	line-height $display-line-height

.display-3
	font-size $display3-size
	font-weight $display3-weight
	line-height $display-line-height

.display-4
	font-size $display4-size
	font-weight $display4-weight
	line-height $display-line-height




// ===================================================================================================================
// Horizontal rules
// ===================================================================================================================

hr
	margin-top 1.2rem
	margin-bottom 1.2rem
	border 0
	border-top 1px solid rgba($brand_black, 0.1)




// ===================================================================================================================
// Emphasis
// ===================================================================================================================

small,
.small
	font-size $small-font-size
	font-weight $font-weight-normal

mark,
.mark
	padding $mark-padding
	// background-color




// ===================================================================================================================
// Lists
// ===================================================================================================================

.list-unstyled
	list-unstyled()

// Inline turns list items into inline-block
.list-inline
	list-unstyled()

.list-inline-item
	display inline-block
	&:not(:last-child)
		margin-right $list-inline-padding

ol,
ul,
dl
	margin-top 0
	margin-bottom 1rem
	padding-left 20px

ol ol,
ul ul,
ol ul,
ul ol
	margin-bottom 0




// ===================================================================================================================
// Misc
// ===================================================================================================================

// Builds on `abbr`
.initialism
	font-size 90%
	text-transform uppercase

// Blockquotes
.blockquote
	padding 0.9rem
	margin-bottom 1rem
	font-size $blockquote-font-size
	border-left $blockquote-border-width solid $blockquote-border-color

.blockquote-footer
	display block
	font-size 80%
	color $blockquote-small-color
	&::before
		content "— "

// em dash, nbsp
// Opposite alignment of blockquote
.blockquote-reverse
	padding-right 1rem
	padding-left 0
	text-align right
	border-right $blockquote-border-width solid $blockquote-border-color
	border-left 0

.blockquote-reverse .blockquote-footer
	&::before
		content ""
	// nbsp, em dash
	&::after
		content " —"




// ===================================================================================================================
// Text Variants
// ===================================================================================================================

// Align
.text
	+bem-variant(left)
		text-align left
	+bem-variant(right)
		text-align right
	+bem-variant(center)
		text-align center
	+bem-variant(justify)
		text-align justify !important
	+bem-variant(text-nowrap)
		white-space nowrap !important
	+bem-variant(truncate)
		text-truncate()

// Transformation
.text
	+bem-variant(lowercase)
		text-transform lowercase !important
	+bem-variant(uppercase)
		text-transform uppercase !important
	+bem-variant(capitalize)
		text-transform: capitalize !important

// Weight and italics
.font-weight-normal
	font-weight $font-weight-normal

.font-weight-bold
	font-weight $font-weight-bold

.font-italic
	font-style italic

// Contextual colors
.text-white
	color #fff !important

// Text-emphasis
text-emphasis-variant($parent, $color)
	{$parent}
		color $color !important
	a{$parent}:hover
		color darken($color, 10%) !important
		
text-emphasis-variant(".text-muted", $text-muted)
text-emphasis-variant(".text-primary", $brand-primary)
text-emphasis-variant(".text-success", $brand-success)
text-emphasis-variant(".text-info", $brand-info)
text-emphasis-variant(".text-warning", $brand-warning)
text-emphasis-variant(".text-danger", $brand-danger)
text-emphasis-variant(".text-gray-dark", $brand_gray-dark)

// Misc
.text-hide
	text-hide()
