$font-size-root = 16px
$font-size-base = 1rem
$font-size-lg = 1.25rem
$font-size-sm = 0.875rem
$font-size-xs = 0.75rem
$font-weight-normal = normal
$font-weight-bold = bold
$font-weight-base = $font-weight-normal
$line-height-base = 1.5

// Headings
$font-size-h1 = 2.35rem
$font-size-h2 = 1.76rem
$font-size-h3 = 1.35rem
$font-size-h4 = 1.2rem
$font-size-h5 = 0.9rem
$font-size-h6 = 0.8rem

//$headings-margin-bottom =
$headings-font-family = inherit
$headings-font-weight = 400
$headings-line-height = 1.1
$headings-color = inherit
$lead-font-size = 1.25rem
$lead-font-weight = 300
$small-font-size = 80%
$text-muted = $brand_gray-light
$blockquote-small-color = $brand_gray-light
$blockquote-font-size = $font-size-base * 1.25
$blockquote-border-color = $brand_gray-lighter
$blockquote-border-width = 0.25rem
$mark-padding = 0.2em
$list-inline-padding = 5px

$display1-size = 6rem
$display2-size = 5.5rem
$display3-size = 4.5rem
$display4-size = 3.5rem
$display1-weight = 300
$display2-weight = 300
$display3-weight = 300
$display4-weight = 300
$display-line-height = $headings-line-height

// Reboot
$dt-font-weight = $font-weight-bold




// ===================================================================================================================
// Various (z-index, image thumbnails, figures, abbr & hr)
// ===================================================================================================================

// Z-index master list
$zindex-dropdown-backdrop = 990
$zindex-navbar = 1000
$zindex-dropdown = 1000
$zindex-fixed = 1030
$zindex-sticky = 1030
$zindex-modal-backdrop = 1040
$zindex-modal = 1050
$zindex-popover = 1060
$zindex-tooltip = 1070

// Image thumbnails
$thumbnail-padding = 0.25rem
//$thumbnail-bg =
//$thumbnail-border-color =
$thumbnail-border-width = 1px
$thumbnail-border-radius = 3px
//$thumbnail-box-shadow =
//$thumbnail-transition =

// Figures
$figure-caption-font-size = 90%
//$figure-caption-color =

// Code
$nested-kbd-font-weight = $font-weight-bold
$kbd-box-shadow = inset 0 -0.1rem 0 rgba($brand_black, 0.25)

// Hr, abbr
$hr-border-color = rgba($brand_black, 0.1)
$abbr-border-color = $brand_gray-light

// This variable affects the `.h-*` and `.w-*` classes
$sizes = {
  "25": 25%,
  "50": 50%,
  "75": 75%,
  "100": 100%
  }




// ===================================================================================================================
// Grid
// ===================================================================================================================

// Array of breakpoints and width
$breakpoints-and-widths = {
	// Extra small screen (phone)
	'xs': {
		"breakpoint": "0",
		"container-width": "0"
	},
	// Small screen (phone)
	'sm': {
		"breakpoint": "576px",
		"container-width": "540px"
	},
	// Medium screen (tablet)
	'md': {
		"breakpoint": "768px",
		"container-width": "720px"
	},
	// Large screen (desktop)
	'lg': {
		"breakpoint": "992px",
		"container-width": "960px"
	},
	// Extra large screen (wide desktop)
	'xl': {
		"breakpoint": "1200px",
		"container-width": "1140px"
	}
}

// Number of columns
$columns = 12

$grid-gutter-width-base = 30px
$grid-gutter-widths = {
	"xs": $grid-gutter-width-base,
	"sm": $grid-gutter-width-base,
	"md": $grid-gutter-width-base,
	"lg": $grid-gutter-width-base,
	"xl": $grid-gutter-width-base,
	"xxl": $grid-gutter-width-base
}
